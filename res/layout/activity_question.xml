<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QuestionActivity" >

    <TextView
        android:id="@+id/question_field_word"
		android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/hello_world" />
     
     <Spinner
        android:id="@+id/question_spinner_answer"
		android:textSize="20sp"
        android:layout_width="wrap_content"
		android:layout_height="80dp"
        android:layout_below="@+id/question_field_word"
        android:layout_alignParentLeft="true"
        android:spinnerMode="dropdown" />
     
     <Button
        android:id="@+id/question_button_check"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
		android:layout_below="@+id/question_spinner_answer"
        android:onClick="doCheck"
        android:text="@string/question_button_check"
        />
     
         <TextView
        android:id="@+id/question_field_result"
		android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/question_button_check"
        android:text="@string/question_field_result" />

</RelativeLayout>
