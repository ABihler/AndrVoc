<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

        <View style="@style/WhiteLineSpace"
        android:id="@+id/whiteLine01"
        />

<Button
        android:id="@+id/start_question"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
		android:layout_below="@+id/whiteLine01"
        android:onClick="startQuestion"
        android:text="@string/ButtonFrageStellen"
        />

        <View style="@style/WhiteLineSpace"
        android:id="@+id/whiteLine02"
        android:layout_below="@+id/start_question"
        />
    <View style="@style/Divider"
        android:id="@+id/div01"
        android:layout_below="@+id/start_question"
        />
   
        <View style="@style/Divider"
        android:id="@+id/div02"
        android:layout_below="@+id/whiteLine01"
        />

        
      <View style="@style/WhiteLineSpace"
        android:id="@+id/whiteLine03"
        android:layout_below="@+id/div02"
       />

      <Spinner
         android:id="@+id/main_spinner_unit"
         android:layout_width="fill_parent"
         android:layout_height="80dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/whiteLine03"
         android:spinnerMode="dropdown"
         android:textSize="20sp" />
    
      <TextView
        android:id="@+id/main_field_log"
		android:textSize="12sp"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:maxLines = "500"
		android:scrollbars = "vertical"
        android:layout_below="@+id/main_spinner_unit"
        android:text="@string/main_field_log" />
      
    
</RelativeLayout>


