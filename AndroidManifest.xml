<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.albert.bihler.andrvoc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.albert.bihler.andrvoc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.albert.bihler.andrvoc.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="de.albert.bihler.andrvoc.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.albert.bihler.andrvoc.MainActivity" />
        </activity>
        <activity
            android:name="de.albert.bihler.andrvoc.QuestionActivity"
            android:label="@string/title_activity_question" 
            android:configChanges="orientation|screenSize" >
        </activity>
    </application>

</manifest>
